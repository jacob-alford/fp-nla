{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "resolveJsonModule": true
  },
  "exclude": [
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}